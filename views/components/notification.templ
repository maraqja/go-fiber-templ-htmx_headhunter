package components

templ Notification(message string) {
	@NotificationStyle()
	<div class="notification notification-success">{message}</div>
}

templ NotificationStyle() {
	<style>
		.notification {
			width: 100%;
			padding: 30px;
			color: var(--color-white);
			border-radius: 5px;
		}

		.notification-success {
			background-color: var(--color-primary);
		}

		.notification-error {
			background-color: #ff0000;
		}
	</style>
}