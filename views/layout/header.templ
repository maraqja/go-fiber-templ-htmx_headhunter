package layout



templ Header() {
	@HeaderStyle()
	<div class="header">
		@Menu()
		 { children... } // То что будет обернуто в тег Header будет помещено сюда
	</div>	
}

templ HeaderStyle() {
	<style>
		.header {
			display: flex;
			justify-content: center;
			flex-direction: column;
			align-items: center;
			background-color: #222222;
			padding-bottom: 30px;
		}
	</style>
}